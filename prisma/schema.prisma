generator client {
  provider      = "prisma-client-js"
  // Use the Node-API (library) engine for better compatibility on serverless
  // hosts (Vercel, Lambda). The library engine avoids shipping platform
  // specific query-engine binaries which are a common source of deploy-time
  // validation errors. If you prefer binaries, re-add binaryTargets and set
  // engineType = "binary" instead.
  engineType = "library"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model ContactForm {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String
  phoneNumber String
  companyName String
  address     String
  zip         String
  radius      String
  message     String
}
